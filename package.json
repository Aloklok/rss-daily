{
  "name": "briefing-hub",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --quiet",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "analyze": "cross-env ANALYZE=true next build --webpack",
    "vercel": "NODE_OPTIONS='--dns-result-order=ipv4first' vercel dev",
    "gen:supabase-types": "supabase gen types typescript --project-id rpctclawjqruwpfirkez > types/supabase.ts",
    "gen:freshrss-types": "npx openapi-typescript types/freshrss-greader.yaml -o types/freshrss-greader.ts",
    "prepare": "husky"
  },
  "browserslist": [
    "last 2 versions",
    "> 0.5%",
    "not dead",
    "not IE 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@sentry/nextjs": "^10.32.1",
    "@supabase/supabase-js": "^2.87.3",
    "@tanstack/react-query": "^5.90.6",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "next": "^16.0.10",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sanitize-html": "^2.17.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@next/bundle-analyzer": "^16.0.10",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^20.19.27",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/sanitize-html": "^2.16.0",
    "@vercel/node": "^5.5.15",
    "@vitest/coverage-v8": "^4.0.16",
    "babel-plugin-react-compiler": "^1.0.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "openapi-typescript": "^7.10.1",
    "postcss": "^8.4.38",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.50.0",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  }
}
